<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:background="@color/white"
    android:layout_margin="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:background="@color/white"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_gravity="left"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_margin="8dp"
                android:id="@+id/imgview"
                android:src="@drawable/linkicon"
                android:layout_height="50dp"
                >

            </ImageView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:id="@+id/linkname"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:text="link name"
                >

            </TextView>

            <TextView
                android:id="@+id/date"
                android:layout_below="@+id/linkname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BCB0B0"
                android:layout_marginTop="2dp"
                android:text="Date"
                android:textSize="15dp">


            </TextView>

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:id="@+id/linkclick"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text=" 2093"
                    >

                </TextView>

                <TextView
                    android:id="@+id/clicks"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/linkname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="2dp"
                    android:textColor="#BCB0B0"
                    android:text="Clicks"
                    android:textSize="15dp">


                </TextView>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="left"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:textColor="#2D70E1"
                android:background="@drawable/bluedotted"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/copyicon"
                android:textSize="15dp"
                android:text="link">

            </TextView>




        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>